<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialogTitleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/testMedName"
        android:layout_margin="@dimen/object_padding"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/soundOffBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/soundOffBtn"
        android:layout_width="@dimen/soundOff_Icon"
        android:layout_height="@dimen/soundOff_Icon"
        android:layout_marginRight="@dimen/object_padding"
        android:background="@drawable/ic_sound_stop_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialogTitleView"
        app:layout_constraintTop_toTopOf="@+id/dialogTitleView" />

</android.support.constraint.ConstraintLayout>